{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "stripInternal": true,
        "declaration": true,
        "lib": ["es2015", "dom"],
        "outDir": ".",
        "rootDir": ".",
        "moduleResolution": "node"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}